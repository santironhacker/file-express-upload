<h1>Your pictures!</h1>

<section>
  <h2>Upload your photo</h2>
  <form action="/upload" method="post" enctype="multipart/form-data">
    <input type="text" name="name">
    <input type="file" name="photo">
    <input type="submit" value="Save">
  </form>
</section>

<h2>Beautiful pictures</h2>
<section>
  <% pictures.forEach(function(picture) { %>
    <!-- the picture.path refers to the name we gave to the picture in the index page of the browser when uploading it -->
    <h3><%= picture.name %></h3>
    <img src="<%= picture.path %>" alt="<%= picture.originalName %>" />
  <% })%>
</section>